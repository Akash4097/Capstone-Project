<resources>
    <!-- Default screen margins, per the Android Design guidelines. -->
    <dimen name="activity_horizontal_margin">16dp</dimen>
    <dimen name="activity_vertical_margin">16dp</dimen>
    <dimen name="activity_vertical_top_margin">120dp</dimen>

    <dimen name="main_view_height">150dp</dimen>

    <dimen name="main_icon">96dp</dimen>
    <dimen name="detail_icon">120dp</dimen>
    <dimen name="list_icon">48dp</dimen>

    <dimen name="rate_detail_horizontal_padding">32dp</dimen>

    <dimen name="rate_text_width">160dp</dimen>

    <!-- Text Sizes - We are using DP here rather than SP because these are already large
     font sizes, and going larger will cause lots of view problems.  This is only for
     the large forecast numbers in the forecast list -->
    <dimen name="rate_text_size">35sp</dimen>
    <dimen name="widget_rate_text_size">22sp</dimen>

    <dimen name="size_fab">56dp</dimen>

    <dimen name="spacing_nano">2dp</dimen>
    <dimen name="spacing_micro">4dp</dimen>
    <dimen name="spacing_normal">8dp</dimen>
    <dimen name="spacing_medium">12dp</dimen>
    <dimen name="spacing_double">16dp</dimen>
    <dimen name="spacing_big">24dp</dimen>
    <dimen name="spacing_huge">72dp</dimen>

    <dimen name="appbar_elevation">4dp</dimen>

    <!-- Widget -->
    <dimen name="widget_detail_default_width">330dp</dimen>
    <dimen name="widget_detail_default_height">180dp</dimen>
    <dimen name="widget_detail_min_resize_width">250dp</dimen>
    <dimen name="widget_detail_min_resize_height">@dimen/widget_detail_default_height</dimen>

    <dimen name="banner_ad_height">50dp</dimen>

</resources>
