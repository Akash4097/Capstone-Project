<android.support.v7.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    app:columnCount="2">

    <android.support.v7.widget.Space
        android:layout_height="@dimen/abc_list_item_padding_horizontal_material"
        app:layout_columnSpan="2"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1" />

    <ImageView
        android:id="@+id/currencyFromFlag"
        android:layout_width="0dp"
        android:adjustViewBounds="true"
        android:maxHeight="@dimen/detail_icon"
        android:maxWidth="@dimen/detail_icon"
        android:transitionName="@string/detail_flag_from_transition_name"
        app:layout_columnWeight="1"
        app:layout_gravity="fill_horizontal" />

    <ImageView
        android:id="@+id/currencyToFlag"
        android:layout_width="0dp"
        android:adjustViewBounds="true"
        android:maxHeight="@dimen/detail_icon"
        android:maxWidth="@dimen/detail_icon"
        android:transitionName="@string/detail_flag_to_transition_name"
        app:layout_columnWeight="1"
        app:layout_gravity="fill_horizontal" />

    <android.support.v7.widget.Space
        app:layout_columnSpan="2"
        app:layout_columnWeight="1"
        app:layout_rowWeight="0.1" />

    <TextView
        android:id="@+id/currencyFromDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:gravity="center_horizontal"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textColor="@color/secondary_text"
        app:layout_columnWeight="1"
        app:layout_gravity="fill_horizontal"
        tools:text="Currency From" />

    <TextView
        android:id="@+id/currencyToDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:gravity="center_horizontal"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textColor="@color/secondary_text"
        app:layout_columnWeight="1"
        app:layout_gravity="fill_horizontal"
        tools:text="Currency To" />

    <TextView
        android:id="@+id/currencyFromRate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:gravity="center_horizontal"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textColor="@color/secondary_text"
        android:textDirection="anyRtl"
        app:layout_columnWeight="1"
        app:layout_gravity="fill_horizontal" />

    <TextView
        android:id="@+id/currencyToRate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:gravity="center_horizontal"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textColor="@color/secondary_text"
        android:textDirection="anyRtl"
        app:layout_columnWeight="1"
        app:layout_gravity="fill_horizontal" />

    <android.support.v7.widget.Space
        android:layout_height="@dimen/abc_list_item_padding_horizontal_material"
        app:layout_columnSpan="2"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1" />

</android.support.v7.widget.GridLayout>