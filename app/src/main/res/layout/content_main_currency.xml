<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryLight">

    <ImageView
        android:id="@+id/header_cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryLight"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/actionbar_gradient_dark"
        android:layout_alignBottom="@id/header_cover"
        android:alpha="0.7" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:layout_margin="@dimen/spacing_double"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/currencyFromFlag"
            android:layout_width="@dimen/main_icon"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:src="@drawable/generic" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="8dp"
            android:paddingStart="8dp">

            <co.carlosjimenez.android.currencyalerts.app.widget.CurrencyEditText
                android:id="@+id/currencyFromAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="5"
                android:fontFamily="sans-serif"
                android:imeOptions="actionGo"
                android:inputType="numberDecimal"
                android:maxLength="20"
                android:singleLine="true"
                android:text="1"
                android:textAppearance="?android:textAppearanceLarge"
                android:textColor="@color/primary_text_main" />

            <TextView
                android:id="@+id/currencyFromDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp"
                android:fontFamily="sans-serif"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/secondary_text_main" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
